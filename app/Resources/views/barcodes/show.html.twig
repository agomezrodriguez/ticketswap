{% extends 'base.html.twig' %}

{% block body %}
    <h1>Barcodes</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ barcode.id }}</td>
            </tr>
            <tr>
                <th>Barcode</th>
                <td>{{ barcode.barcode }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('barcode_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('barcode_edit', { 'id': barcode.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
