{% extends 'base.html.twig' %}

{% block body %}
    <h1>Tickets</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ ticket.id }}</td>
            </tr>
            <tr>
                <th>Boughtbyuserid</th>
                <td>{{ ticket.boughtByUserId }}</td>
            </tr>
            <tr>
                <th>Boughtatdate</th>
                <td>{% if ticket.boughtAtDate %}{{ ticket.boughtAtDate|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('ticket_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('ticket_edit', { 'id': ticket.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
